<CatalogoSolicitudCapacitacionInterna>

    
    <facilitadores>
		<query>
			SELECT * FROM instructor WHERE cve_tipo_instructor = 1;
		</query>
	</facilitadores>

    <areas>
		<query>
			SELECT cve_area, nombre_area FROM area
		</query>
	</areas>

    <programaEducativo>
		<query>
			SELECT cve_ugac, nombre_ugac FROM ugac
		</query>
	</programaEducativo>

    <horarios>
		<query>
			SELECT cve_horario, descripcion FROM horario
		</query>
	</horarios>

    <tablaSolicitud>
        <query>
            SELECT * FROM solicitud_capacitacion_interna
        </query>
    </tablaSolicitud>

    <insertarSolicitud>
        <query>
			DECLARE @instructores VARCHAR(MAX);
			SET @instructores = ?; 


			EXEC InsertarSolicitudConInstructores
				@cve_horario = ?,
				@tipo_competencia = ?,
				@nombre = ?,
				@total_dias = ?,
				@total_horas = ?,
				@fecha_inicio = ?,
				@fecha_fin = ?,
				@lugar = ?,
				@curso = ?,
				@numero_participantes = ?,
				@objetivo = ?,
				@alcance = ?,
				@metodologia = ?,
				@programa_evento = ?,
				@resultado_aprendizaje = ?,
				@perfil_participante = ?,
				@estatus = 1,
				@usuario_registro = ?,
				@instructores = @instructores;
        </query>
    </insertarSolicitud>
    
</CatalogoSolicitudCapacitacionInterna>